<mvc:View controllerName="barcodeScanner.controller.App1" 
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" 
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	displayBlock="true" xmlns="sap.m">
	
	<f:SimpleForm 
		layout="ResponsiveGridLayout" 
		editable="true" 
		labelSpanL="3"
		labelSpanM="3"
		emptySpanL="3"
		emptySpanM="3"
		columnsL="1" 
		columnsM="1">
		
		<Input id="ip"/>    
		<Button text="Weiter" press="onWeiter">
			<layoutData>
				<l:GridData span="L2 M2" />
			</layoutData>
		</Button>
	</f:SimpleForm>

</mvc:View>